<template>
    <div>
        <section>
             <transition-group name="fade">
                <div class="label" v-for="(item,index) in  arrs"  :key="index">
                    <div class="label_item">
                        <input type="text" v-model="item.name">
                        <i class="ion ion-md-close align-middle" @click="close_label(index)"></i>
                        <span class="hot_jh" v-show="item.hot==0?false:true" @click="showHot(item)">激活</span>
                        <span class="hot" v-show="!item.hot==0?false:true" @click="showHot(item)">hot!</span>
                    </div>
                </div>
             </transition-group>
            <div class="add_label" @click="add_label">
                <p v-show="show_label">+</p>
                <input type="text" v-model="newValue" placeholder="新增标签" v-show="!show_label" @blur="disappear()">
            </div>
        </section>
    </div>
</template>

<script>
export default {
  name: "labelSound",
  data() {
    return {
      show_label: true,
      newValue:'',
      arrs: [
        {
          name: "秀音",
          id: "1",
          hot: 0
        },
        {
          name: "吴韩伟",
          id: "2",
          hot: 1
        },
        {
          name: "姚永琪",
          id: "3",
          hot: 1
        },
        {
          name: "和团团",
          id: "4",
          hot: 0
        },
        {
          name: "和瑞瑞",
          id: "5",
          hot: 1
        }
      ]
    };
  },
  created() {},
  methods: {
    //   切换hot状态
    showHot(item) {
      item.hot = !item.hot;
    },
    // 删除标签
    close_label(i) {
      this.arrs.splice(i, 1);
    },
    // 添加标签
    add_label(){
        this.show_label = false;
        this.newValue = ''
    },
    disappear(){
        this.show_label = true;
        if(this.newValue!=''){
          this.arrs.push({name:this.newValue,hot:1})
        }
        
    }
  }
};
</script>

